local m=peripheral.find("monitor")m.setTextScale(1)m.setBackgroundColor(colors.black)m.setTextColor(colors.white)m.clear()function txt(x,y,t,c)c=c or colors.white;m.setTextColor(c)m.setCursorPos(x,y)m.write(t)end;function btn(x,y,t)txt(x,y,t)return{x=x,y=y,w=#t,h=1,t=t}end;function touched(b,x,y)return y==b.y and x>=b.x and x<=b.x+b.w-1 end;function draw()m.clear()txt(2,1,"BlessOS - Touch to open app",colors.yellow)apps={btn(2,3,"[ Bible Msg ]"),btn(2,5,"[ Notes ]"),btn(2,7,"[ Exit ]")}end;function openApp(id)if id==1 then m.clear()txt(2,2,"'I am the light of the world.'")txt(2,3,"- John 8:12")txt(2,5,"Touch to return")os.pullEvent("monitor_touch")draw()elseif id==2 then noteApp()elseif id==3 then m.clear()txt(2,2,"God bless you!")end end;function noteApp()m.clear()local text=""local keys={"Q","W","E","R","T","Y","U","I","O","P","A","S","D","F","G","H","J","K","L","Z","X","C","V","B","N","M","<"," "}local keyButtons={}local x,y=2,5 for i,k in ipairs(keys)do if k=="<"then k="[DEL]"elseif k==" "then k="[SPACE]"end;table.insert(keyButtons,btn(x,y,k))x=x+6;if x>45 then x=2 y=y+1 end end;txt(2,2,"Touch letters to write:")while true do local e,s,x,y=os.pullEvent("monitor_touch")for _,b in ipairs(keyButtons)do if touched(b,x,y)then if b.t=="[DEL]"then text=text:sub(1,#text-1)elseif b.t=="[SPACE]"then text=text.." "else text=text..b.t end;txt(2,4,text:sub(-38))end end;if y==1 then draw()break end end end;draw()while true do local e,s,x,y=os.pullEvent("monitor_touch")for i,b in ipairs(apps)do if touched(b,x,y)then openApp(i)break end end end
