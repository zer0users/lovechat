local m=peripheral.find("monitor")m.setTextScale(1.5)m.setBackgroundColor(colors.black)m.setTextColor(colors.white)m.clear()function txt(x,y,t,c)c=c or colors.white;m.setTextColor(c)m.setCursorPos(x,y)m.write(t)end;function btn(x,y,t)txt(x,y,t)return{x=x,y=y,w=#t,h=1,label=t}end;function touched(b,x,y)return y==b.y and x>=b.x and x<=b.x+b.w-1 end;function draw()m.clear()txt(2,1,"BlessOS - God is with you!",colors.yellow)apps={btn(2,3,"[ Bible Msg ]"),btn(2,5,"[ Calculator ]"),btn(2,7,"[ Exit ]")}end;function openApp(id)if id==1 then m.clear()txt(2,2,"'For God so loved the world...'")txt(2,3,"- John 3:16")txt(2,5,"Touch to return")os.pullEvent("monitor_touch")draw()elseif id==2 then m.clear()txt(2,2,"1 + 1 = "..(1+1))txt(2,4,"Touch to return")os.pullEvent("monitor_touch")draw()elseif id==3 then m.clear()txt(2,2,"God bless you!")end end;draw()while true do local e,s,x,y=os.pullEvent("monitor_touch")for i,b in ipairs(apps)do if touched(b,x,y)then openApp(i)end end end
